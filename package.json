{
  "name": "electron-react",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "description": "Electron React Application",
  "author": "YOUR NAME HERE",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=test ISURL=true ISNOTDIST=true npm-run-all --parallel dev:front dev:electron",
    "dev:prod": "cross-env NODE_ENV=production ISURL=true ISNOTDIST=true npm-run-all --parallel dev:front dev:electron",
    "dev:front": "vite --mode $NODE_ENV",
    "dev:electron": "npm run transpile:electron && electron .",
    "build": "cross-env NODE_ENV=production  npm-run-all --parallel build:front transpile:electron",
    "build:test": "cross-env NODE_ENV=test  npm-run-all --parallel build:front transpile:electron",
    "build:front": "tsc -b && vite build --mode $NODE_ENV", 
    "lint": "eslint .",
    "clean": "rm -rf dist dist-electron",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:watch": "vitest watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "preview:electron": "cross-env ISNOTDIST=true electron .",
    "transpile:electron": "cross-env NODE_ENV=${NODE_ENV:-test} tsc --project tsconfig.electron.json",
    "dist:base": "electron-builder --config electron-builder.json",
    "dist:mac": "npm run build && npm run dist:base --mac --universal --arm64",
    "dist:mac:test": "npm run build:test &&  npm run dist:base --mac --universal --arm64",
    "dist:win": "npm run build &&  npm run dist:base --win --x64",
    "dist:win:test": "npm run build:test &&  npm run dist:base --win --x64",
    "dist:linux": "npm run build &&  npm run dist:base --linux --x64",
    "dist:linux:test": "npm run build:test &&  npm run dist:base --linux --x64"
  },
  "dependencies": {
    "os-utils": "^0.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "npm-run-all": "^4.1.5",
    "recharts": "^2.15.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "url": "^0.11.4",
    "vite": "^5.4.10"
  },
  "build": "./electron-builder.json",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
