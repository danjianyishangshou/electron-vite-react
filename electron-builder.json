{
    "appId": "com.electron.app",
    "productName": "Electron React App",
    "extraResources": [
        "dist-electron/preload.cjs",
        "src/assets/**/*"
    ],
    "files": [
        "dist-electron/**/*",
        "dist-front/**/*"
    ],
    "icon": "src/assets/images/desktopIcon.png",
    "directories": {
        "output": "release"
    },
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": [
            "tar.gz"
        ],
        "category": "Utility"
    },
    "win": {
        "target": [
            "portable",
            "nsis"
        ]
    }
}